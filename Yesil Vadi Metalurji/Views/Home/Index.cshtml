                            {
                                <div class="col-sm-4">
                                    <img src="/Resimler/@homepage.IsOrtaklarimizFoto5" alt="Image" class="img-fluid" style="border: 5px solid transparent; transition: border 0.5s ease-in-out;"
                                         onmouseover="this.style.border = '5px solid green';"
                                         onmouseout="this.style.border = '5px solid transparent';">
                                </div>
                            }
                            @if (homepage.IsOrtaklarimizFoto6 != null)
                            {
                                <div class="col-sm-4">
                                    <img src="/Resimler/@homepage.IsOrtaklarimizFoto6" alt="Image" class="img-fluid" style="border: 5px solid transparent; transition: border 0.5s ease-in-out;"
                                         onmouseover="this.style.border = '5px solid green';"
                                         onmouseout="this.style.border = '5px solid transparent';">
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        }






    }
    else
    {
        <h1>DÜZENLEMEDE</h1>
    }


}