                </div>



                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Önceki</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Sonraki</span>
                </a>
            </div>

            <br />
        }
        <center><h3 class="tittle">@homepage.Title</h3></center>
        @if (homepage.SubtitleStatus != false)
        {
            <center><h4>@homepage.Subtitle</h4></center>
        }
        <hr />

        @if (homepage.ContentStatus != false)
        {
            string description = homepage.Content;
            int maxLineLength = 129;
            List<string> descriptionLines = new List<string>();

            for (int i = 0; i < description.Length; i += maxLineLength)
            {
                int remainingLength = Math.Min(maxLineLength, description.Length - i);
                descriptionLines.Add(description.Substring(i, remainingLength));
            }

            <center>
                @foreach (string line in descriptionLines)
                {
                    @Html.Raw(line)<br />
                }
            </center>
            <hr />
        }


    }
    else
    {
        <h1>DÜZENLEMEDE</h1>
