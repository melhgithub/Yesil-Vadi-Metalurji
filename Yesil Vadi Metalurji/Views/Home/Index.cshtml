                    @if (!string.IsNullOrEmpty(homepage.ImageUrl6))
                    {
                        <div class="carousel-item" style="background-image: linear-gradient(rgba(23, 22, 23, 0.2), rgba(23, 22, 23, 0.5)), url('~/Resimler/@homepage.ImageUrl6');">
                            <div class="carousel-caption">
                            </div>
                            <img src="~/Resimler/@homepage.ImageUrl6" class="d-block w-100" alt="about Image">
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(homepage.ImageUrl7))
                    {
                        <div class="carousel-item" style="background-image: linear-gradient(rgba(23, 22, 23, 0.2), rgba(23, 22, 23, 0.5)), url('~/Resimler/@homepage.ImageUrl7');">
