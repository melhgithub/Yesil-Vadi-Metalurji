                    <div class="carousel-caption">
                        <h3>@product.Name</h3>
                    </div>
                    <img src="~/Resimler/@product.ImageUrl1" class="d-block w-100" alt="Product Image">
                </div>
                @if (!string.IsNullOrEmpty(product.ImageUrl2))
                {
                    <div class="carousel-item" style="background-image: linear-gradient(rgba(23, 22, 23, 0.2), rgba(23, 22, 23, 0.5)), url('~/Resimler/@product.ImageUrl2');">
