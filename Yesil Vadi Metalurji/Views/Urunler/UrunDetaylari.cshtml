                                    </a>
                                </div>
                                <div class="blog-info-middle">
                                    <ul>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-calendar-alt"></i> @(((DateTime)product.CreateDate).ToString("dd-MMM-yyyy"))
                                            </a>
                                    </ul>
                                </div>
                            </div>


                            <h3>
                                <a href="/Urunler/UrunDetaylari/@product.ID">@product.Name</a>
                            </h3>
                            <hr />
                            <p>
                                <h4>Ürün;</h4>
                                @{
                                    string description = product.Description;
                                    int maxLineLength = 70;
                                    List<string> descriptionLines = new List<string>();

                                    for (int i = 0; i < description.Length; i += maxLineLength)
                                    {
                                        int remainingLength = Math.Min(maxLineLength, description.Length - i);
                                        descriptionLines.Add(description.Substring(i, remainingLength));
                                    }
                                }

                                @foreach (string line in descriptionLines)
                                {
                                    @line<br />
                                }

                                <h3>Fiyat:</h3> @product.Price
                            </p>
                            <a href="/Urunler/Iletisim" class="btn btn-primary read-m">İletişime Geç</a>
                            <a href="/Urunler/TeklifVer/@product.ID" class="btn btn-primary read-m" id="teklifButon">Teklif Ver</a>
                        </div>

                    </div>
                    <!--//left-->
                    <!--right-->
                    <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                        <div class="right-blog-info text-left">
                            <div class="tech-btm">
                                <h4>Son eklenen üç ürünümüz :</h4>

                                <div class="blog-grids row mb-3">
