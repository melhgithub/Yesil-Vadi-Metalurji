@using Entity.Concrete
@using Yesil_Vadi_Metalurji.Dto
@using System.ComponentModel
@using Newtonsoft.Json
@model ProductsViewModel
@{
    ViewData["Title"] = "Ürün Detayları";
    Layout = "~/Views/Shared/_UrunDetayLayout.cshtml";
}


<body>
    <section class="banner-bottom">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                    @foreach (var product in Model.Products)
                    {
                        <div class="blog-grid-top">
                            <div class="b-grid-top">
                                <div class="blog_info_left_grid">
                                    <a href="/Urunler/UrunDetaylari/@product.ID/">
                                        <img src="~/Resimler/@product.ImageUrl1" class="img-fluid" alt="">
                                    </a>
                                </div>
                                <div class="blog-info-middle">
                                    <ul>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-calendar-alt"></i> @(((DateTime)product.CreateDate).ToString("dd-MMM-yyyy"))
                                            </a>
                                    </ul>
                                </div>
                            </div>

                            <h3>
                                <a href="/Urunler/UrunDetaylari/@product.ID">@product.Name</a>
                            </h3>
                            <p>
                                @product.Description
                            </p>
                            <a href="/Urunler/Iletisim" class="btn btn-primary read-m">İletişime Geç</a>
                            <a href="/Urunler/TeklifVer/@product.ID" class="btn btn-primary read-m" id="teklifButon">Teklif Ver</a>
                        </div>
                    }
                </div>

                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">
                        <div class="tech-btm">
                            <h4>Kategoriler</h4>
                            <ul class="list-group single">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    EKLENECEK
                                    <span class="badge badge-primary badge-pill">ürün sayısı</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    EKLENECEK
                                    <span class="badge badge-primary badge-pill">ürün sayısı</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    EKLENECEK
                                    <span class="badge badge-primary badge-pill">ürün sayısı</span>
                                </li>
                            </ul>
                        </div>
                        <div class="tech-btm">
                            <h4>Son 3 ürünümüz :</h4>

                            <div class="blog-grids row mb-3">
                                <div class="col-md-5 blog-grid-left">
                                    <a href="single.html">
                                        <img src="images/1.jpg" class="img-fluid" alt="">
                                    </a>
                                </div>
                                <div class="col-md-7 blog-grid-right">

                                    <h5>
                                        <a href="single.html">EKLENECEK </a>
                                    </h5>
                                    <div class="sub-meta">
                                        <span>
                                            <i class="far fa-clock"></i> ÜRÜN TARİHİ
                                        </span>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>

                </aside>
            </div>
        </div>
    </section>

</body>