@using Entity.Concrete
@model UrunlerPageViewModel
@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Views/Shared/_AdminTest.cshtml";
}


<form method="post" action="/UrunlerPageTest/Update" id="updateForm">
    @foreach (var urunler in Model.Urunler)
    {
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-pencil-alt"></i>
                    Düzenle
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <input type="text" name="ID" value="@urunler.ID" hidden />

                    <div class="col-md-4">
                        <h2>Durum Seçin:</h2>
                        <select name="Status" class="form-control" required="required">
                            @if (urunler.Status == (UrunlerStatuses)1)
                            {
                                <option value="1" selected>AKTİF</option>
                                <option value="2">AKTİF DEĞİL</option>
                            }
                            else
                            {
                                <option value="1">AKTİF</option>
                                <option value="2" selected>AKTİF DEĞİL</option>
                            }
                        </select>
                    </div>

                    <div class="col-sm-4">
                        <h2>Banner Durumu:</h2>
                        <select name="Banner" class="form-control" required="required">
                            @if (urunler.Banner == true)
                            {
                                <option value="1" selected>AKTİF</option>
                                <option value="2">AKTİF DEĞİL</option>
                            }
                            else
                            {
                                <option value="1">AKTİF</option>
                                <option value="2" selected>AKTİF DEĞİL</option>
                            }
                        </select>
                    </div>

                    <div class="col-sm-3">
                        <h2>İçerik Durumu:</h2>
                        <select name="ContentStatus" class="form-control" required="required">
                            @if (urunler.ContentStatus == true)
                            {
                                <option value="1" selected>AKTİF</option>
                                <option value="2">AKTİF DEĞİL</option>
                            }
                            else
                            {
                                <option value="1">AKTİF</option>
                                <option value="2" selected>AKTİF DEĞİL</option>
                            }
                        </select>
                    </div>

                    <div class="col-sm-3">
                        <h2>Alt-Başlık Durumu:</h2>
                        <select name="SubtitleStatus" class="form-control" required="required">
                            @if (urunler.SubtitleStatus == true)
                            {
                                <option value="1" selected>AKTİF</option>
                                <option value="2">AKTİF DEĞİL</option>
                            }
                            else
                            {
                                <option value="1">AKTİF</option>
                                <option value="2" selected>AKTİF DEĞİL</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-3">
                        <h2>Başlık:</h2>
                        <input type="text" name="Title" value="@urunler.Title" class="form-control" required />
                    </div>

                    <div class="col-md-3">
                        <h2>Alt başlık:</h2>
                        <input type="text" name="Subtitle" value="@urunler.Subtitle" class="form-control" />
                    </div>

                    <div class="col-md-12">
                        <h2>Detaylar:</h2>
                        <textarea id="contentEditor" name="Content" rows="7" class="form-control col-sm-12" required>@urunler.Content</textarea>
                    </div>
                    <br />
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmModal">Güncelle</button>
                </div>
            </div>
        </div>
    }


</form>

<div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">Onay</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bu değişiklikleri kaydetmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <button type="submit" form="updateForm" class="btn btn-primary">Evet, Kaydet</button>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>
<script>
    CKEDITOR.replace('contentEditor', {
        removePlugins: 'autogrow',
        enterMode: CKEDITOR.ENTER_BR,
        shiftEnterMode: CKEDITOR.ENTER_P,
    });
</script>