
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Admin Paneli</title>
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <!-- IonIcons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/lib/izitoast/css/iziToast.min.css">
    <link rel="stylesheet" href="~/lib/jquery-confirm/jquery-confirm.min.css">
    <!-- Google Font: Source Sans Pro -->


</head>
<!--
BODY TAG OPTIONS:
=================
Apply one or more of the following classes to to the body tag
to get the desired effect
|---------------------------------------------------------|
|LAYOUT OPTIONS | sidebar-collapse                        |
|               | sidebar-mini                            |
|---------------------------------------------------------|
-->

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="#" class="brand-link">
                <img src="#" alt="#" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Admin Paneli</span>
            </a>
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="https://www.inkiris.com/wp-content/uploads/2014/10/placeholder-160x160.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">Admin Paneli</a>
                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview">
                            <a href="/Category/Index" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Kategoriler
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Product/Index" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Ürünler
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Offer/Index" class="nav-link">
                                <i class="nav-icon fas fa-tree"></i>
                                <p>
                                    Teklifler
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Order/Index" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Siparişler
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Production/Index" class="nav-link">
                                <i class="nav-icon fas fa-table"></i>
                                <p>
                                    Üretimler
                                </p>
                            </a>
                        </li>

                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-door-closed"></i>
                                <p>
                                    Çıkış Yap
                                </p>
                            </a>
                        </li>



                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper">

            <div class="content">
                @RenderBody()
            </div>
        </div>

    </div>

    @await Html.PartialAsync("_ScriptImports")

    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.js"></script>

    <script src="~/AdminLTE-3.0.4/plugins/chart.js/Chart.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/pages/dashboard3.js"></script>
</body>
</html>

@if (IsSectionDefined("scripts"))
{
    @RenderSection("scripts", required: false)
}